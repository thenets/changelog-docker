<div class="item">
  <input name="{{parentType}}[{{parentType}}_{{relationType}}][{{index}}][person_id]" type="hidden" value="{{id}}">
  <input class="js-position" name="{{parentType}}[{{parentType}}_{{relationType}}][{{index}}][position]" type="hidden">
  <img class="ui avatar image" src="{{avatarUrl}}">
  <div class="content">
    <div class="header">{{name}} {{handle}}</div>
  </div>

  <div class="right floated content">
    <div class="ui tiny icon button js-remove"><i class="remove icon"></i></div>
  </div>
</div>
